<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p>Completed: <%= @task.completed %></p>

<%= link_to "Edit Task", edit_task_path %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<br>
<%= link_to "Back to list", tasks_path %>